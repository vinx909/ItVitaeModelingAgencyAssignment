@model ModelingAgency.Data.Client

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Client</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressNumber" class="control-label"></label>
                <input asp-for="AddressNumber" class="form-control" />
                <span asp-validation-for="AddressNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Postalcode" class="control-label"></label>
                <input asp-for="Postalcode" class="form-control" />
                <span asp-validation-for="Postalcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KVKNumber" class="control-label"></label>
                <input asp-for="KVKNumber" class="form-control" />
                <span asp-validation-for="KVKNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BTWNumber" class="control-label"></label>
                <input asp-for="BTWNumber" class="form-control" />
                <span asp-validation-for="BTWNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Events" class="control-label"></label>
                <select asp-for="Events" class="form-control" multiple>
                    @foreach (var item in ViewBag.EventsListEdit)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <!--<label asp-for="Events" class="control-label"></label> <br />
                Html.DropDownListFor(model => model.Events,
                new SelectList(ViewBag.EventsList, "Id", "Name"), "Select Event")-->
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Aproved" /> @Html.DisplayNameFor(model => model.Aproved)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
